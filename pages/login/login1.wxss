/* pages/login/login1.wxss */
.container_login{
  background: #ebebeb;
  display: flex;
  flex-direction: column;
  position: relative;
  font-size: 28rpx;
  width: 100%;
}
.content_div{
  padding: 0 18rpx;
}
.btn{
  width: 100%;
  height: 100rpx;
  background-color: #185fbf;
  font-size: 34rpx;
  line-height: 100rpx;
  border-radius: 55rpx;
  position: fixed;
  bottom: 0;
  left: 0;
}
.radio-select{
  display: block;
  height: 148rpx;
  line-height: 148rpx;
  background: #fff;
  margin-top: 24rpx;
  border-radius: 10rpx;
  color: #999;
  font-size: 36rpx;
  padding-left: 140rpx;
  display: flex;
  align-items: center;
}
radio{
  margin-right: 50rpx;
}
radio{
  transform: scale(0.6);
  
}
radio .wx-radio-input{
  background: transparent;
  border: 4rpx solid #999;
}
radio .wx-radio-input.wx-radio-input-checked{

    border-color:#0f4c81 !important;

    background:#0f4c81 !important;

}
.check{
  transform: scale(0.6,0.6);
}
.check .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: #0f4c81;
}
.agreement{
  padding-bottom: 80rpx;
  padding: 0 60rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
}
.form{
  width: 520rpx;
  margin: 0 auto; 
}
.formInput{
  height: 70rpx;
  border-radius: 35rpx;
  background: #f1f1f1;
  margin-top: 56rpx;
}
.formInput>text{
  color: #ed7701;
  top: 15rpx;
  left: -24rpx;
}
.formInput>input{
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}
.formCon{
  background: #fff;
  padding-top: 20rpx;
  padding-bottom: 100rpx;
  border-radius: 10rpx;
}
.formTitle{
  color: #b9b9b9;
  font-size: 36rpx;
  padding-top: 50rpx;
  border-top: 2rpx solid #ebebeb;
}

.radio-aud{
  background: url('https://mis-pv.ciif365.cn/wechatApplet/login/login_ex_bg.png') no-repeat;
  background-size: 100% 100%;
}
.radio-ex{
  background: url('https://mis-pv.ciif365.cn/wechatApplet/login/login_au_bg.png') no-repeat;
  background-size: 100% 100%;
}
.not-selected{
  opacity: 0.6;
}
.user-img{
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}